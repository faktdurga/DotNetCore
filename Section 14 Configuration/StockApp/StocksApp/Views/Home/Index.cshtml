@model StocksApp.Models.Stock

@{
    ViewBag.Title = "Home";
}

<div class="box trading-panel">
    <div class="flex trading-panel-flex">
        <div id="stock-price-panel">
            <div class="stock">
                <h1 class="stock-title">@Model.StockSymbol</h1>
                <table>
                    <tbody>
                        <tr>
                            <td>Current Price</td>
                            <th><small>$</small><span> @Model.CurrentPrice.ToString("N")</span></th>
                        </tr>
                        <tr>
                            <td>Highest Price</td>
                            <th><small>$</small><span> @Model.HighestPrice.ToString("N")</span></th>
                        </tr>
                        <tr>
                            <td>Lowest Price</td>
                            <th><small>$</small><span> @Model.LowestPrice.ToString("N")</span></th>
                        </tr>
                        <tr>
                            <td>Open Price</td>
                            <th><small>$</small><span> @Model.OpenPrice.ToString("N")</span></th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
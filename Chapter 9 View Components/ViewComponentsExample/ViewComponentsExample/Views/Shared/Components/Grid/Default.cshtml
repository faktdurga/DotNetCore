@model PersonGridModel

@{
    int count = 1;
}

<div class="box">
    <h3>@Model.GridTitle</h3>
    <table class="table w-100">
        <thead>
            <tr>
                <th>Sr. No</th>
                <th>Name</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Person person in @Model.People)
            {
                
                <tr>
                    <td>@count</td>
                    <td>@person.PersonName</td>
                    <td>@person.JobTitle</td>
                </tr>
                count++;
            }
                        
        </tbody>
    </table>
</div>